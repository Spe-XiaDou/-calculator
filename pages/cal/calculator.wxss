/* 背景色 */
.bgc_bf {
  background-color: #bfbfbf;
}
.bgc_ccc {
  background-color: #ccc;
}
/* 背景色 */
.mini {
  display: flex;
  flex-direction: column;
  width: 80%;
  height: 420px;
}
.ctn {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 550px;
}

.head {
  display: flex;
  align-items: center;
}
.title {
  flex: 1;
  margin-left: 5px;
}
.tips {
  position: relative;
  width: 50px;
  /* height: 40px; */
}

.tips:hover {
  background-color: #ccc;
}
#narrow {
  /* display: inline-block; */
  position: absolute;
  width: 16px;
  height: 2px;
  background-color: #000;
}

#expansion {
  /* display: inline-block; */
  position: absolute;
  width: 12px;
  height: 12px;
  border: 2px solid #000;
}
.expand {
  position: absolute;
  top: -5px;
  left: 14px;
  width: 12px;
  height: 12px;
  border: 2px solid #000;
}
#close {
  /* display: inline-block; */
  position: absolute;
  width: 18px;
  height: 2px;
  background-color: #000;
  transform: translate(-50%, -50%) rotateZ(45deg);
}

#close::after {
  content: '';
  display: inline-block;
  position: relative;
  top: -15px;
  left: 0px;
  width: 18px;
  height: 2px;
  color: #000;
  background-color: #000;
  transform: rotateZ(90deg);
}
.vh_m {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%)
}
/* main主体部分 */
.main {
  display: flex;
  flex-direction: column;
  flex: 1;
}
/* 输入框 */
.ipt {
  display: flex;
  flex-direction: column;
  flex: 1.2;
}
.row {
  display: flex;
  flex: 1;
}
.utils {
  height: 50px;
}


#calculate {
  display: inline-block;
  box-sizing: border-box;
  flex: 1;
  padding-right: 12px;
  border: 0;
  text-align: right;
}

#look {
  display: inline-block;
  box-sizing: border-box;
  flex: 2;
  padding-right: 10px;
  border: 0;
  text-align: right;
  font-size: 28px;
}
/* 按键样式 */


.nor {
  display: flex;
  flex: 1;
  margin: 3px;
  /* height: 80px; */
  background-color: #ddd;
  justify-content: center;
  align-items: center;
  font-size: 22px;
}
.num {
  /* height: 80px; */
  background-color: #f3f3f3;
}